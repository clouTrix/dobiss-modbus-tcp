<configuration>
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %date{ISO8601} [%thread] %highlight(%-5level) %cyan(%logger{15}) - %msg %n
            </pattern>
        </encoder>
    </appender>

    <logger name="cloutrix" level="info" />

    <root level="warn">
        <appender-ref ref="console"/>
    </root>

</configuration>
